<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="0">

        <record id="res_config_settig_import_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inheri.account.base.import</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@name='fiscal_localization_setting_container']" position="after">

                    <h2>customer discount</h2>
                    <div class="row mt16 o_settings_container"
                        name="accounting_import_setting_container">
                        <div class="col-12 o_setting_box">
                            <div class="o_setting_left_pane" />
                            <div class="d-flex mt4 align-items-center">
                                <field name="allowed_discount_productt_id" />
                            </div>
                            <div class="d-flex align-items-center">
                                <field name="Allowed_discount_accountt_id" />
                            </div>
                        </div>
                    </div>


                </xpath>
            </field>
        </record>


    </data>
</odoo>